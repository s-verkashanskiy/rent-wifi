<div class="page-header">
    <h1>Регистрация</h1>
</div>


<div class="container row">
    <div class="jumbotron col-sm-4 pull-center">
      <h6 id="error-message" style="color: rgb(238, 8, 8);">{{error-message}}</h6>
      <h6 id="unique-message" style="color: rgb(203, 238, 8);">{{unique-message}}</h6>
        <form name="signup" action="/signup" method="post">
            <div>
                <label>Username:</label>
                <input type="text" name="username" required/>
            </div>
            <div>
                <label>Email:</label>
                <input type="text" name="email" required/>
            </div>
            <div>
                <label>Password:</label>
                <input type="password" name="password" required/>
            </div>
            <div>
                <input id="reg" class="btn btn-primary" type="submit" value="Зарегистрироваться" />
            </div>
    </div>
</div>
