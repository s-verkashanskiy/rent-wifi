<div class="page-header">
    <h1>{{dict.signup.text1}}</h1>
</div>


<div class="container row">
    <div class="jumbotron col-sm-4 pull-center">
      <div id="errors-unique"></div>
      <div id="errors-error"></div>
        <form name="signup" action="/signup" method="post">
            <div>
                <label>Username:</label>
                <input type="text" name="username" required/>
            </div>
            <div>
                <label>Email:</label>
                <input type="text" name="email" required/>
            </div>
            <div>
                <label>Password:</label>
                <input type="password" name="password" required/>
            </div>
            <div>
                <input id="reg" class="btn btn-primary" type="submit" value="Зарегистрироваться" />
            </div>
        </form>
    </div>
</div>
{{htmlTemplate 'partials/error'}}
